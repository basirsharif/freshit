<!DOCTYPE html>
<html>
  <head>
    <div class="container">
    <title>Fresh-it</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
      <link href='http://fonts.googleapis.com/css?family=Permanent+Marker' rel='stylesheet' type='text/css'>
      <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600italic' rel='stylesheet' type='text/css'>


    <%= csrf_meta_tags %>
  </head>
  <body>
 <% if current_user %>   
  <%= render partial: 'partials/nav-bar' %>
 <% end %>




    <div class="pull-right user-info">
          <% if current_user %>
            <%= link_to destroy_user_session_path, method: :delete, class: 'btn btn-large' do %>
             Logout
           <% end %>
           <% else %>
             <%= link_to "Sign In", new_user_session_path %> or 
             <%= link_to "Sign Up", new_user_registration_path %>
           <% end %>
         </div>

      

            <% if flash[:notice] %>
        <div class="alert alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:notice] %>
        </div>
      <% elsif flash[:error] %>
        <div class="alert alert-error">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:error] %>
        </div>
      <% elsif flash[:alert] %>
        <div class="alert">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:alert] %>
        </div>
      <% end %>

      <%= yield %>
    </div>
   <%= javascript_include_tag "application" %>
   <%= yield :page_scripts %>
  </body>
</html>